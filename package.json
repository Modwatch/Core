{
  "name": "modwatch",
  "version": "2.0.8",
  "private": true,
  "scripts": {
    "build:module": "rollup -c --environment NODE_ENV:production,NOMODULE:false",
    "build:nomodule": "rollup -c --environment NODE_ENV:production,NOMODULE:true",
    "build": "run-p build:*",
    "watch": "rollup -cw --environment NODE_ENV:development,API_ENV:production",
    "test:ava": "ava",
    "test:ts": "tsc --noEmit",
    "test": "run-p test:*",
    "postgen": "node postgen",
    "loadz0r": "node loadz0r/supermin.js",
    "serve": "now dev",
    "premicro": "tsc -p ./src/__helpers__/tsconfig.json",
    "micro": "micro-dev -p 3001",
    "prettier": "prettier --write 'src/**/*.{js,jsx,css,ts,tsx}'",
    "postinstall": "run-p postgen loadz0r",
    "deploy:ci": "firebase use testing-ee4f4 --token $FIREBASE_TOKEN && firebase deploy --non-interactive --token $FIREBASE_TOKEN"
  },
  "precommit": [
    "prettier",
    "build"
  ],
  "main": "micro.js",
  "ava": {
    "extensions": [
      "ts"
    ],
    "require": [
      "esm",
      "@babel/register"
    ],
    "babel": {
      "testOptions": {
        "presets": [
          "@babel/preset-typescript"
        ]
      }
    }
  },
  "dependencies": {
    "jwt-decode": "^2.2.0",
    "preact": "^10.0.0-rc.1",
    "preact-async-route": "^2.2.1",
    "preact-router": "^3.0.1",
    "promiscuous": "^0.7.2",
    "unfetch": "^4.1.0",
    "unistore": "^3.4.1"
  },
  "devDependencies": {
    "@babel/preset-typescript": "^7.3.3",
    "@babel/register": "^7.5.5",
    "@mdx-js/mdx": "^1.1.5",
    "@modwatch/types": "^0.1.0",
    "@surma/rollup-plugin-off-main-thread": "^1.1.1",
    "@swc/core": "^1.0.45",
    "ava": "^2.2.0",
    "colorette": "^1.1.0",
    "firebase-tools": "^7.2.2",
    "json5": "^2.1.0",
    "jwt-simple": "^0.5.6",
    "micro": "^9.3.4",
    "micro-compress": "^1.0.0",
    "micro-cors": "^0.1.1",
    "micro-dev": "^3.0.0",
    "microrouter": "^3.1.3",
    "mri": "^1.1.4",
    "npm-run-all": "^4.1.5",
    "postcss-custom-properties": "^9.0.2",
    "postcss-nesting": "^7.0.1",
    "pre-commit": "^1.2.2",
    "prettier": "^1.18.2",
    "rollup": "^1.19.3",
    "rollup-plugin-babel": "^4.3.3",
    "rollup-plugin-commonjs": "^10.0.2",
    "rollup-plugin-node-resolve": "^5.2.0",
    "rollup-plugin-postcss": "^2.0.3",
    "rollup-plugin-re": "^1.0.7",
    "rollup-plugin-sucrase": "^2.1.0",
    "rollup-plugin-terser": "^5.1.1",
    "rollup-plugin-typescript": "^1.0.1",
    "rollup-plugin-visualizer": "^2.5.4",
    "rollup-pluginutils": "^2.8.1",
    "sucrase": "^3.10.1",
    "tiny-glob": "^0.2.6",
    "tslib": "^1.10.0",
    "typescript": "^3.5.3"
  },
  "subdomain": "skyrimmodwatcher",
  "domains": [
    "modwat.ch",
    "www.modwat.ch"
  ]
}
