{
  "name": "@modwatch/core",
  "version": "0.2.0",
  "scripts": {
    "prebuild": "rimraf public/dist/*",
    "build": "rollup -c --environment NODE_ENV:production",
    "watch": "rollup -cw --environment NODE_ENV:development,API_ENV:production",
    "serve": "serve public",
    "test": "sucrase-node node_modules/tape/bin/tape ./tests/**/*.ts | tap-min",
    "test:watch": "watch 'npm run test' src tests -du",
    "tsc": "tsc --noEmit",
    "loadz0r": "node loadz0r/supermin.js",
    "cssProperties": "sucrase-node cssPropertiesGen.ts",
    "micro": "sucrase-node ./node_modules/micro-dev/bin/micro-dev ./micro.ts -p 3001",
    "prettier": "prettier --write 'src/**/*.{js,jsx,css,ts,tsx}'",
    "gitaddsrc": "git add src",
    "prepublish": "run-p loadz0r cssProperties"
  },
  "precommit": [
    "prepublish",
    "prettier",
    "build",
    "gitaddsrc"
  ],
  "files": [
    "src",
    "loadz0r",
    "!loadz0r/supermin.js",
    "!loadz0r/loader.js",
    "README.md"
  ],
  "main": "micro.js",
  "dependencies": {
    "jwt-decode": "^2.2.0",
    "preact": "^10.4.6",
    "promiscuous": "^0.7.2",
    "unfetch": "^4.1.0",
    "unistore": "^3.5.2"
  },
  "devDependencies": {
    "@babel/core": "^7.10.5",
    "@istanbuljs/nyc-config-typescript": "^1.0.1",
    "@modwatch/types": "^0.3.0",
    "@rollup/plugin-commonjs": "^14.0.0",
    "@rollup/plugin-node-resolve": "^8.4.0",
    "@surma/rollup-plugin-off-main-thread": "^1.4.1",
    "esbuild": "^0.6.5",
    "npm-run-all": "^4.1.5",
    "postcss-custom-properties": "^9.1.1",
    "postcss-nesting": "^7.0.1",
    "postcss-url": "^8.0.0",
    "pre-commit": "^1.2.2",
    "prettier": "^2.0.5",
    "proxyquire": "^2.1.3",
    "rimraf": "^3.0.2",
    "rollup": "^2.22.2",
    "rollup-plugin-esbuild": "^2.4.2",
    "rollup-plugin-postcss": "^3.1.3",
    "rollup-plugin-re": "^1.0.7",
    "rollup-plugin-visualizer": "^4.0.4",
    "sucrase": "^3.15.0",
    "tap-min": "^2.0.0",
    "tape": "^4.13.3",
    "tape-watch": "^2.3.0",
    "terser": "^4.8.0",
    "tslib": "^1.13.0",
    "typescript": "^3.9.7",
    "watch": "^1.0.2"
  }
}
