{
  "name": "modwatch",
  "version": 2,
  "builds": [
    { "src": "public/**", "use": "@now/static" }
  ],
  "routes": [
    { "src": "/", "dest": "public/index.html" },
    { "src": "/dist/(.+)", "dest": "public/dist/$1" },
    { "src": "/images/(.+)", "dest": "public/images/$1" },
    { "src": "/fonts/(.+)", "dest": "public/fonts/$1" },
    { "src": "/(.+\\..+)", "dest": "public/$1" },
    { "src": "/(.+)", "dest": "public/index.html" }
  ]
}
